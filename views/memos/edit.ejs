<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Memo</title>
  </head>
  <body>
    <h1>Edit memo</h1>
    <form action="/memos/<%= memo._id %>?_method=put" method="post">
      <label for="title">Memo title</label>
      <input
        type="text"
        name="title"
        id="title"
        placeholder="memo title"
        value="<%= memo.title %>"
      />
      <label for="text">Text</label>
      <input
        type="text"
        name="text"
        id="text"
        placeholder="text"
        value="<%= memo.text %>"
      />
      <label for="category">Select Category</label>
      <select name="category" id="category">
        <% for (let category of categories) { %>
        <option value="<%= category %>" <%= memo.category === category ? "selected" : "" %>><%= category %></option>
        <% } %>
      </select>
      <button>Submit</button>
    </form>
    <a href="/memos/<%= memo._id %>">Cancel</a>
  </body>
</html>
